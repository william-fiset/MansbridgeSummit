<resources>

    <style name="Theme.Mtasummit" parent="@style/Theme.AppCompat.Light.DarkActionBar">

        <item name="actionBarItemBackground">@drawable/selectable_background_mtasummit</item>
        <item name="popupMenuStyle">@style/PopupMenu.Mtasummit</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Mtasummit</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Mtasummit</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Mtasummit</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Mtasummit</item>
        <item name="actionModeBackground">@drawable/cab_background_top_mtasummit</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_mtasummit</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Mtasummit</item>

        <!-- Light.DarkActionBar specific -->
        <item name="actionBarWidgetTheme">@style/Theme.Mtasummit.Widget</item>

    </style>

    <style name="ActionBar.Solid.Mtasummit" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/ab_solid_mtasummit</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_mtasummit</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_mtasummit</item>
        <item name="progressBarStyle">@style/ProgressBar.Mtasummit</item>
    </style>

    <style name="ActionBar.Transparent.Mtasummit" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@drawable/ab_transparent_mtasummit</item>
        <item name="progressBarStyle">@style/ProgressBar.Mtasummit</item>
    </style>

    <style name="PopupMenu.Mtasummit" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_mtasummit</item>
    </style>

    <style name="DropDownListView.Mtasummit" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_mtasummit</item>
    </style>

    <style name="ActionBarTabStyle.Mtasummit" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_mtasummit</item>
    </style>

    <style name="DropDownNav.Mtasummit" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_mtasummit</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_mtasummit</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_mtasummit</item>
    </style>

    <style name="ProgressBar.Mtasummit" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_mtasummit</item>
    </style>

    <style name="ActionButton.CloseMode.Mtasummit" parent="@style/Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_mtasummit</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Mtasummit.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Mtasummit</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Mtasummit</item>
    </style>

</resources>
