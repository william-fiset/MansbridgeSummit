        android:focusableInTouchMode="true"

        android:padding="1dp"
        android:background="#000"

        android:layout_gravity="center"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"

        android:adjustViewBounds="true"

        />

