<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    >


    <!--
    scaleType="fitXY" strectches the image
    -->
    <ImageView

        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_weight="0.7"

        android:id="@+id/mansbridgeSummitHeader"
        android:layout_centerHorizontal="true"

        android:focusableInTouchMode="false"

        android:background="#000"

        android:src="@drawable/mansbride_summit_presents"
        android:adjustViewBounds="true"

        android:scaleType="fitXY"

        />

    <ImageView


        android:layout_below="@+id/mansbridgeSummitHeader"

        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_weight="1"

        android:id="@+id/youtubeVideo"
        android:layout_centerHorizontal="true"
        android:focusableInTouchMode="true"

        android:background="#000"

        android:src="@drawable/mansbride_summit_presents"

        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"

        android:adjustViewBounds="true"

        />

    <ImageView

        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_weight="1"

        android:id="@+id/stream_image"
        android:layout_below="@+id/youtubeVideo"
        android:layout_centerHorizontal="true"
        android:focusableInTouchMode="true"

        android:background="#000"

        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"

        android:src="@drawable/mta_live_logo"
        android:adjustViewBounds="true"
        android:clickable="true"
        />

</LinearLayout>
