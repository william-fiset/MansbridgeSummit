<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent" android:layout_height="match_parent"
                android:background="#fff"
    >


    <!--
    scaleType="fitXY" strectches the image
    -->
    <ImageView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mansbridgeSummitHeader"
        android:layout_centerHorizontal="true"
        android:focusableInTouchMode="true"
        android:minHeight="120dp"
        android:maxHeight="120dp"
        android:background="#000"

        android:src="@drawable/mansbride_summit_presents"
        android:adjustViewBounds="true"

        android:scaleType="fitXY"

        />

    <ImageView

        android:layout_below="@+id/mansbridgeSummitHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/youtubeVideo"
        android:layout_centerHorizontal="true"
        android:focusableInTouchMode="true"

        android:maxHeight="100dp"
        android:minWidth="300dp"

        android:background="#000"

        android:src="@drawable/mansbride_summit_presents"

        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"

        android:adjustViewBounds="true"

        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/stream_image"
        android:layout_below="@+id/youtubeVideo"
        android:layout_centerHorizontal="true"
        android:focusableInTouchMode="true"
        android:minHeight="115dp"
        android:background="#000"

        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"

        android:src="@drawable/mta_live_logo"
        android:adjustViewBounds="true"
        android:padding="5dp"
        android:clickable="true"
        />

</RelativeLayout>